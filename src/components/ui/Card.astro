---
interface Props {
  class?: string;
  hover?: boolean;
}

const {
  class: className = '',
  hover = false,
} = Astro.props;

const baseStyles = 'bg-white border border-border rounded-lg p-8';
const hoverStyles = hover ? 'hover-lift hover:shadow-lg' : '';

const classes = `${baseStyles} ${hoverStyles} ${className}`;
---

<div class={classes}>
  <slot />
</div>
