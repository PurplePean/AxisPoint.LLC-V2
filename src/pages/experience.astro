---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';

const title = 'Experience | AxisPoint';
const description =
  'Examples of how AxisPoint has supported commercial real estate owners and investors.';

const caseStudies = [
  {
    title: 'Multifamily Acquisition Review',
    situation:
      'A private investor was preparing to acquire a 48-unit multifamily property based on broker-provided underwriting.',
    approach:
      'We rebuilt the model from source data, stress-tested rent growth assumptions, and identified deferred maintenance not reflected in the pro forma.',
    outcome:
      'The client renegotiated the purchase price by $400K or walked away from an overpriced deal.',
  },
  {
    title: 'Retail Portfolio Hold/Sell Analysis',
    situation:
      'A family office needed clarity on whether to hold, sell, or reinvest across a 12-property retail portfolio.',
    approach:
      'We analyzed each asset individually, modeled exit scenarios, and ranked properties by risk-adjusted return potential.',
    outcome:
      'The client sold three underperforming assets and redeployed capital into two higher-conviction acquisitions.',
  },
  {
    title: 'Value-Add Due Diligence',
    situation:
      'An investor was evaluating a value-add office property with aggressive renovation assumptions.',
    approach:
      "We reviewed contractor bids, comparable lease-up timelines, and stress-tested the sponsor's exit cap rate assumptions.",
    outcome:
      'The client proceeded with adjusted expectations and a restructured capital stack.',
  },
];
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="section-padding-sm bg-surface">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="font-headline text-5xl md:text-6xl text-text mb-6">
            Experience
          </h1>
          <p class="text-xl text-text-muted">
            Text-based case summaries demonstrating how AxisPoint thinks.
          </p>
        </div>
      </div>
    </section>

    <!-- Case Studies -->
    <section class="section-padding bg-white">
      <div class="container-custom max-w-5xl">
        <div class="space-y-12">
          {
            caseStudies.map((study) => (
              <Card>
                <h2 class="font-headline text-2xl md:text-3xl text-text mb-6">
                  {study.title}
                </h2>

                <div class="space-y-6">
                  <div>
                    <h3 class="text-sm font-semibold text-text-muted uppercase tracking-wider mb-2">
                      Situation
                    </h3>
                    <p class="text-lg text-text">{study.situation}</p>
                  </div>

                  <div>
                    <h3 class="text-sm font-semibold text-text-muted uppercase tracking-wider mb-2">
                      Approach
                    </h3>
                    <p class="text-lg text-text">{study.approach}</p>
                  </div>

                  <div>
                    <h3 class="text-sm font-semibold text-text-muted uppercase tracking-wider mb-2">
                      Outcome
                    </h3>
                    <p class="text-lg text-text">{study.outcome}</p>
                  </div>
                </div>
              </Card>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-primary text-white">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="font-headline text-3xl md:text-4xl mb-6">
            Ready to discuss your situation?
          </h2>
          <p class="text-lg mb-8 opacity-90">
            Share what you're working on, and we'll tell you how we can help.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href="/contact#form"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium bg-white text-primary rounded-md hover:bg-gray-100 transition-all duration-200 ease-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white"
            >
              Request a Review
            </a>
            <a
              href="https://calendar.app.google/N2UcZCp8Vo4yTxMj7"
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg font-medium text-white hover:text-gray-200 transition-colors duration-200"
            >
              Book a Call â†’
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
